#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# directories frontend and backend must be keep
fileList=$(git diff --staged --name-only :^frontend :^backend)

echo '----- Checking Root...'

if [ ! -z "$fileList" ]
then
  echo "error: Unauthorized modifications\n"

  echo "$fileList\n"

  echo "use 'git restore --staged ...' to fix the problem"
  echo "(and ask your instructor why you should not change these files)\n"

  exit 1
fi

echo '----- Done!'

# start prettier and eslint checks
npm run lint
